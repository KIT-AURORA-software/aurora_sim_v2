<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

  <xacro:include filename="inertial_macros.xacro"/>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <material name="red">
    <color rgba="1 0 0 1"/>
  </material>

  <!-- base link -->
  <link name="base_link">
  </link>

  <!-- base_foot_link-->
  <joint name="base_foot_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_foot_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_foot_link">
  </link>

  <!--chassis link-->

  <joint name= "chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis_link"/>
    <origin xyz="0 0 0.4" rpy="0 0 0"/>
  </joint>

  <link name="chassis_link">
    <visual>
      <origin xyz ="0 0 0"/>
      <geometry>
        <box size="1.0 0.8 0.3"/>
      </geometry>
      <material name="white"/>
    </visual>
    <collision>
      <origin xyz ="0 0 0"/>
      <geometry>
        <box size="1.0 0.8 0.3"/>
      </geometry>
    </collision>
    <xacro:inertial_box mass="3.0" x="1.0" y="0.8" z="0.3">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_box>
  </link>

  <gazebo reference="chassis_link">
    <material>Gazebo/White</material>
  </gazebo>

  <!-- left_front_steering-->

  <joint name="left_front_steering_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="left_front_steering_link"/>
    <origin xyz="0.5 0.4 -0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="left_front_steering_link">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.25" length="0.3" radius="0.1">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <gazebo reference="left_front_steering_link">
    <material>Gazebo/Red</material>
  </gazebo>

<!-- left_front_wheel-->
  <joint name="left_front_wheel_joint" type="continuous">
    <parent link="left_front_steering_link"/>
    <child link="left_front_wheel_link"/>
    <origin xyz="0 0 -0.15" rpy="${-pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="left_front_wheel_link">
    <visual>
      <geometry>
        <cylinder radius ="0.15" length="0.2"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius ="0.15" length="0.2"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.5" length="0.2" radius="0.15">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>
  <gazebo reference="left_front_wheel_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- right_front_steering-->

  <joint name="right_front_steering_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="right_front_steering_link"/>
    <origin xyz="0.5 -0.4 -0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>  

  <link name="right_front_steering_link">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.25" length="0.3" radius="0.1">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>
  <gazebo reference="right_front_steering_link">
    <material>Gazebo/Red</material>
  </gazebo>

<!-- right_front_wheel-->
  <joint name="right_front_wheel_joint" type="continuous">
    <parent link="right_front_steering_link"/>
    <child link="right_front_wheel_link"/>
    <origin xyz="0 0 -0.15" rpy="${-pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="right_front_wheel_link">
    <visual>
      <geometry>
        <cylinder radius ="0.15" length="0.2"/>
      </geometry>
      <material name="black"/>
