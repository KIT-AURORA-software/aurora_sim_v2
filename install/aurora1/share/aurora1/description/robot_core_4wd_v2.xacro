  <!-- right_back_steering-->
  <joint name="right_back_steering_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="right_back_steering_link"/>
    <origin xyz="-0.5 -0.4 -0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>  
  <link name="right_back_steering_link">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.25" length="0.3" radius="0.1">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>

  <gazebo reference="right_back_steering_link">
    <material>Gazebo/Red</material>
  </gazebo>

<!-- right_back_wheel-->
  <joint name="right_back_wheel_joint" type="continuous">
    <parent link="right_back_steering_link"/>
    <child link="right_back_wheel_link"/>
    <origin xyz="0 0 -0.15" rpy="${-pi/2} 0 0"/>
