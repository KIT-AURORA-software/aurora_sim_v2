  </link>
  <gazebo reference="right_front_wheel_link">
    <material>Gazebo/Black</material>
  </gazebo>

  <!-- left_back_steering-->
  <joint name="left_back_steering_joint" type="continuous">
    <parent link="chassis_link"/>
    <child link="left_back_steering_link"/>
    <origin xyz="-0.5 0.4 -0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="left_back_steering_link">
    <visual>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.1" length="0.3"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.25" length="0.3" radius="0.1">
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </xacro:inertial_cylinder>
  </link>
  <gazebo reference="left_back_steering_link">
    <material>Gazebo/Red</material>
  </gazebo>

<!-- left_back_wheel-->
  <joint name="left_back_wheel_joint" type="continuous">
    <parent link="left_back_steering_link"/>
    <child link="left_back_wheel_link"/>
    <origin xyz="0 0 -0.15" rpy="${-pi/2} 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="left_back_wheel_link">
    <visual>
      <geometry>
        <cylinder radius ="0.15" length="0.2"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius ="0.15" length="0.2"/>
      </geometry>
    </collision>
    <xacro:inertial_cylinder mass="0.5" length="0.2" radius="0.15">
